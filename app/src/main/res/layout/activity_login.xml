<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding_login"
    tools:context=".Activity.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_height"
        android:scaleType="fitCenter"
        android:src="@drawable/firebase"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_login"
        android:layout_marginTop="@dimen/image_top"
        android:layout_marginRight="@dimen/padding_login"
        android:orientation="vertical"
        android:padding="@dimen/edittext_padding">

        <EditText
            android:id="@+id/edit_txt_mail"
            android:layout_marginBottom="@dimen/padding_login_middle"
            android:hint="@string/email"
            style="@style/Widget.EditText.Custom"/>

        <EditText
            android:id="@+id/edit_txt_pass"
            android:hint="@string/password"
            android:inputType="textPassword"
            style="@style/Widget.EditText.Custom"/>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_login"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/top_image"
        android:src="@drawable/entrar"
        app:borderWidth="0dp"
        app:pressedTranslationZ="8dp"/>
</LinearLayout>
